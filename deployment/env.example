# Qalia.ai Environment Configuration
# Copy this file to .env in your deployment directory and fill in your values

# GitHub App Configuration (REQUIRED)
GITHUB_APP_ID=your_github_app_id_here
GITHUB_WEBHOOK_SECRET=your_webhook_secret_here
OPENAI_API_KEY=your_openai_api_key_here

# Server Configuration
PORT=8000
HOST=0.0.0.0

# Deployment URL Configuration  
DEFAULT_DEPLOY_URL=https://your-domain.com/{repo}
# Or set specific URLs for repositories:
# DEPLOY_URL_YOURORG_YOURREPO=https://yourrepo.yourdomain.com

# QA AI Configuration - Extended timeouts for DigitalOcean
MAX_ANALYSIS_TIMEOUT=1800  
MAX_EXPLORATION_DEPTH=5    
DEFAULT_FRAMEWORKS=playwright,cypress,jest

# Feature Toggles
ENABLE_PR_COMMENTS=true
ENABLE_CHECK_RUNS=true

# GitHub Private Key (alternative to private-key.pem file)
# GITHUB_PRIVATE_KEY="-----BEGIN OPENSSH PRIVATE KEY-----
# your_private_key_content_here
# -----END OPENSSH PRIVATE KEY-----" 